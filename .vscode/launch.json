{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python for net", // デバッグ構成として表示する名前
      "type": "python", // デバッカの種別
      "request": "launch", // デバッグ時にプログラムを起動する(launch), 既に起動しているプログラムにデバッカをアタッチする(attach)
      "program": "${file}",
      "python": "/opt/conda/envs/net/bin/python3",
      "console": "integratedTerminal", // プログラムを起動するコンソールの種類を指定
      "cwd": "${fileDirname}", // デバッグ実行を行うディレクトリ
      "redirectOutput": true
    },
  ]
}